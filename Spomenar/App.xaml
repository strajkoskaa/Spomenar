<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Spomenar"
             x:Class="Spomenar.App">
    <Application.Resources>
        <Style x:Key="TabButtonStyle" TargetType="ShellContent">
            <Setter Property="Shell.TabBarBackgroundColor" Value="#fff2e6" />
            <Setter Property="Shell.TabBarTitleColor" Value="Black" />
            
        </Style>
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="#fff2e6" />
            <Setter Property="BarTextColor" Value="Black" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Neucha" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Neucha" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="FontFamily" Value="Neucha" />
        </Style>
        <Style TargetType="Editor">
            <Setter Property="FontFamily" Value="Neucha" />
        </Style>
    </Application.Resources>
</Application>
