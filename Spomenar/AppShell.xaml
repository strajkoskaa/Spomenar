<?xml version="1.0" encoding="UTF-8" ?>
<Shell  
    x:Class="Spomenar.AppShell"  
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
    xmlns:localPages="clr-namespace:Spomenar.Pages"
    Title="Споменар"
    Shell.BackgroundColor="#fff2e6"
    Shell.TitleColor="Black"
    Shell.DisabledColor="Gray"
    Shell.UnselectedColor="DarkGray"
    Shell.ForegroundColor="Black">

    <TabBar>
        <ShellContent Title="Мисла" Style="{StaticResource TabButtonStyle}" ContentTemplate="{DataTemplate localPages:ThoughtsPage}" />
        <ShellContent Title="Денес" Style="{StaticResource TabButtonStyle}" ContentTemplate="{DataTemplate localPages:TodayPage}" />
        <ShellContent Title="Јас низ времето" Style="{StaticResource TabButtonStyle}" ContentTemplate="{DataTemplate localPages:HistoryPage}" />
    </TabBar>  

</Shell>
